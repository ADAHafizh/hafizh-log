---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { buttonVariants } from '@/components/ui/button'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { getRecentPosts } from '@/lib/data-utils'
import { Button } from "@/components/ui/button"
import { cn } from '@/lib/utils'

const blog = await getRecentPosts(SITE.featuredPostCount)
---

<!-- Heading Section -->
<Layout class="max-w-3xl">
  <PageHead slot="head" title="Home" />
  <section>
    <div class="rounded-lg border">
      <div class="flex flex-col space-y-1.5 p-6">
        <h3 class="text-3xl leading-none font-medium">l•o•g</h3>
        <p class="text-muted-foreground text-sm">
          /lɒɡ/ &bull; <span class="font-medium">noun</span>
        </p>
      </div>
      <div class="p-6 pt-0">
        <p class="text-muted-foreground text-sm">
          a full written record of a journey, a period of time, or an event.
        </p>
      </div>
      <div class="flex flex-col space-y-1.5 p-6">
        <div class="flex flex-wrap items-center gap-2 md:flex-row">
          <Link href="/tags/capstone" class= {cn(buttonVariants({ variant: 'default' }), 'flex gap-x-1.5 group')}>
            <span class="transition-transform group-hover:-translate-x-1">&larr;</span> Capstone
          </Link>
          <Link href="/tags/machine-lab" class= {cn(buttonVariants({ variant: 'default' }), 'flex gap-x-1.5 group')}>
            <span class="transition-transform group-hover:-translate-x-1">&larr;</span> Machine Lab
          </Link>
          <Link href="/tags/digital-archive" class= {cn(buttonVariants({ variant: 'outline' }), 'flex gap-x-1.5 group')}>
            <span class="transition-transform group-hover:-translate-x-1">&larr;</span> Digital Archive
          </Link>
          <Link href="/tags/digital-archive" class= {cn(buttonVariants({ variant: 'outline' }), 'flex gap-x-1.5 group')}>
            <span class="transition-transform group-hover:-translate-x-1">&larr;</span> Future Punk
          </Link>
        </div>
      </div>
    </div>
  </section>
</Layout>
